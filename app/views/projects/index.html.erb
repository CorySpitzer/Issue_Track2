<!DOCTYPE html>
<html>
    <head> 
    </head>

    <body>
        <%= render "shared/menu" %>
            <h2 class="centered"> All Projects: </h2>
            <p class="centered"> -------------- </p>
            <% @projects.each do |project| %>
                <ul>
                    <div class="card centered-div">
                        <div class="card-body centered">
                            <li>
                                <h3><%= link_to project.title, project_path(project) %>: </h3>
                                <h4><%= project.summary%></h4>
                                <p><%= project.description %></p>
                                <ul>
                                    <h4>Issues:</h4>
                                    <% project.issues.each do |issue| %>
                                        <li> <%=  link_to issue.summary, issue_path(issue) %>
                                        </li>
                                    <% end %>
                                </ul>
                            </li>
                        </div>
                    
                    </div>
                </ul>
            <% end %>
            <p></p>
            <% if can? :manage, :all %>
                <p class="centered"> <%= link_to 'New Project', new_project_path, :class => "btn btn-light" %> </p>
                <p class="centered"> <%= link_to 'All Projects Report', all_projects_index_path, :class => "btn btn-light" %> </p>
            <% end %>
            <p class="centered">Projects#index</p>
            <p class="centered">Find me in app/views/projects/index.html.erb</p>

        </ul>
    </body>
</html>
