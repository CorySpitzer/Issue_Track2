<%= render "shared/menu" %>

<h1>Projects#index</h1>
<p>Find me in app/views/projects/index.html.erb</p>
<body>
    <ul>
        <% @projects.each do |project| %>
            <li>
                <h3><%= link_to project.summary, project_path(project) %></h3>
                <p><%= project.description %></p>
            </li>
            <ul>
                <h4>Issues:</h4>
                <% project.issues.each do |issue| %>
                    <li> <%= issue.summary %>
                    </li>
                <% end %>
            </ul>
        <% end %>
    </ul>
</body>
