<%= render "shared/menu" %>


<body>
    <ul>
        <div class="centered">
            <% @projects.each do |project| %>
                <li>
                    <h3><%= link_to project.summary, project_path(project) %></h3>
                    <p><%= project.description %></p>
                </li>
                <ul>
                    <h4>Issues:</h4>
                    <% project.issues.each do |issue| %>
                        <li> <%= issue.summary %>
                        </li>
                    <% end %>
                </ul>
            <% end %>
            <p></p>
            <p> <%= link_to 'New Project', new_project_path, :class => "btn btn-light" %> |</p>
            <p> <%= link_to 'All Projects Report', all_projects_index_path, :class => "btn btn-light" %> |</p>
            <h1>Projects#index</h1>
            <p>Find me in app/views/projects/index.html.erb</p>
        </div>

    </ul>
</body>
