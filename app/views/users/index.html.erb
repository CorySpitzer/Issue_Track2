<%= render "shared/menu" %>

<h1 class="centered"> Users: </h1>

<ul>
    <% @users.each do |user| %>
        <li>
            <div class="card">
                <div class="card-body">
                    <h2> Username: <%= link_to user.username, user_path(user)  %> </h2>
                    <h3> Status: <%= user.role  %> </h3>
                </div>
            </div>
        </li>
    <% end %>
</ul>
<div class="centered">
    <h1>users#index</h1>
    <p>Find me in app/views/users/index.html.erb</p>
</div>